{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",  // Atualize para es6 ou esnext
    "jsx": "react-jsx",  // Use react-jsx para melhor performance e simplificação do JSX runtime
    "esModuleInterop": true,
    "skipLibCheck": true,  // Pula a checagem de tipos das bibliotecas, acelera o build
    "forceConsistentCasingInFileNames": true,  // Força consistência de nomeação de arquivos
    "strict": true  // Ativa todas as opções estritas para melhor qualidade de código
  }
}
